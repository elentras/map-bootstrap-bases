%h3 Users

.row.clearfix
  .span4
    .well= render 'form'
  .span8
    %table.table.table-striped
      %tr
        %th Name
        %th
        %th
        %th
      - @users.each do |user|
        %tr
          %td= user.name
          %td= link_to 'Show', user, class: 'btn btn-info'
          %td= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning'
          %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

= link_to 'New User', new_user_path, class: 'btn btn-success'
