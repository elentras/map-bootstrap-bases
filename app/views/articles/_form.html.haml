= form_for(@article) do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :content
    %br/
    = f.text_area :content
  .field
    = f.label :user_id
    %br/
    = f.select :user_id, User.all.collect { |u| [u.name, u.id]}
  .field
    = f.label :published
    %br/
    = f.check_box :published
  .field
    = f.label :category_id
    %br/
    = f.select :category_id, Category.all.collect { |u| [u.name, u.id]}
  .actions
    = f.submit
